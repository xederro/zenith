{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "parent": { "type": "string" },
    "values": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": { "type": "string" },
          "is_inherited": { "type": "boolean" }
        },
        "required": ["is_inherited"],
        "additionalProperties": false
      }
    },
    "children": {
      "type": "array",
      "items": { "$ref": "#" }
    }
  },
  "required": ["name", "values", "children"],
  "additionalProperties": false
}
